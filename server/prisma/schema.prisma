// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  customerID  String    @id
  companyName String
  contactName String
  phoneNumber String
  email       String
  stage       CustomerStage
  orders      Order[]
  createdAt        DateTime @default(now()) @db.Timestamptz(6)
  tags        String[]
  location    String
  details     String
}

enum CustomerStage {
  PROSPECTING
  QUALIFIED
  PRESENTING
  PROCESSING
  CLOSED_WON
  CLOSED_LOST
}

model Order {
  orderID    String       @id
  customerID String
  customer   Customer     @relation(fields: [customerID], references: [customerID])
  orderType  OrderType
  status     OrderStatus
  items      Json
  serviceFee Int
  tasks      Task[]
  details    String
  delivery   String
}

enum OrderType {
  PRODUCT_PURCHASE
  INSTALLATION
  MAINTENANCE
  CONSULTATION
  CUSTOM_SERVICE
}

enum OrderStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

model Task {
  taskID   String      @id
  orderID  String
  order    Order       @relation(fields: [orderID], references: [orderID])
  status   TaskStatus
  assignee String
  priority Priority
  deadline String
  details  String
}

enum TaskStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}
